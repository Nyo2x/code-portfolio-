# 1. Create Ulauncher user themes folder
mkdir -p ~/.config/ulauncher/user-themes

# 2. Download macOS-style theme for Ulauncher
git clone https://github.com/Ulauncher/ulauncher-macos-theme ~/.config/ulauncher/user-themes/macos

# 3. Optional: Install Ulauncher if not already
sudo apt update
sudo apt install -y gir1.2-keybinder-3.0 libwebkit2gtk-4.0-dev python3-pip
pip3 install --user ulauncher

# 4. Launch Ulauncher so we can configure it
ulauncher & disown

# 5. Download popular Spotlight-like extensions
mkdir -p ~/.local/share/ulauncher/extensions

# Calculator
git clone https://github.com/Ulauncher/ulauncher-calculator.git ~/.local/share/ulauncher/extensions/ulauncher-calculator

# App Finder
git clone https://github.com/brpaz/ulauncher-appfinder.git ~/.local/share/ulauncher/extensions/ulauncher-appfinder

# Web Search
git clone https://github.com/Ulauncher/ulauncher-websearch.git ~/.local/share/ulauncher/extensions/ulauncher-websearch

# File Search
git clone https://github.com/friday/ulauncher-file-search.git ~/.local/share/ulauncher/extensions/ulauncher-file-search

# 6. Install optional visual compositor (for smooth fade)
sudo apt install -y picom

# 7. Start picom with simple fade animation (can be added to startup later)
picom -b --fade-in-step=0.03 --fade-out-step=0.03 --fade-delta=10 --animations

echo "‚úÖ Done! Now:"
echo "üëâ Press Ctrl+Space to open Ulauncher"
echo "‚öôÔ∏è  Click the gear icon ‚Üí Appearance ‚Üí choose 'macos'"
echo "üîë Change Hotkey to 'Super + Space' to match macOS"
