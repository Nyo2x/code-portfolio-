sudo apt remove -y ulauncher && \
rm -rf ~/.config/ulauncher && \
wget -O ulauncher.deb https://github.com/Ulauncher/Ulauncher/releases/download/5.15.4/ulauncher_5.15.4_all.deb && \
sudo apt update && \
sudo apt --fix-broken install -y && \
sudo apt install -y ./ulauncher.deb && \
which ulauncher || sudo find / -type f -iname "ulauncher" 2>/dev/null | grep bin && \
echo "✅ If no error above, now trying to launch Ulauncher..." && \
(ulauncher &>/dev/null & disown || echo "❌ Failed to launch. Try running it manually with: python3 /path/to/ulauncher")
