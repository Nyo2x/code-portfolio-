# 1. Install Slick Greeter
sudo apt update
sudo apt install -y slick-greeter lightdm-settings

# 2. Set Slick as the default greeter
echo "greeter-session=slick-greeter" | sudo tee /etc/lightdm/lightdm.conf

# 3. Optional: Install macOS-style theme & icons
sudo apt install -y arc-theme papirus-icon-theme

# 4. Open LightDM Settings GUI to customize look (login background, logo, etc.)
lightdm-settings
